{
  "name": "stacktalk",
  "version": "1.0.0",
  "description": "A modern Q&A platform built with React.js and Node.js",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "keywords": [
    "q&a",
    "react",
    "nodejs",
    "mongodb",
    "stackoverflow",
    "community"
  ],
  "author": "StackTalk Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
} 